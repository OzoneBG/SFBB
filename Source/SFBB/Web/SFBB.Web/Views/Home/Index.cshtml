@model IEnumerable<SFBB.Web.ViewModels.Home.IndexCategoriesForumsViewModel>
@{
    ViewBag.Title = "Forums";
    int i = 1;
}
<div class="container">
    <ol class="breadcrumb">
        <li class="active"><span class="glyphicon glyphicon-home"></span>&nbsp;Forum</li>
    </ol>
</div>
<div class="container">
    @foreach (var category in Model)
    {
        <div class="row table-bordered" style="background-color: rgb(47, 47, 47)">
            <div class="col-md-6">@Html.ActionLink(category.Title, "GetForumsByCategory", "Category", new { id = category.Id }, new { })</div>
            <div class="col-md-2">Threads/Posts</div>
            <div class="col-md-3">Last post</div>
            <div class="col-md-1 text-right">
                <!--<button data-toggle="collapse" data-target="#wrapper@(i)" type="button" class="btn btn-default btn-sm">
                    <span  class="glyphicon glyphicon-plus"></span>
                </button>-->
                <span data-toggle="collapse" data-target="#wrapper@(i)" class="glyphicon glyphicon-plus"></span>
            </div>
        </div>
        <div id="wrapper@(i++)" class="collapse in">
            @foreach (var forum in category.Forums)
            {
            <div class="row no-pad">
                <div class="col-md-1 text-center"><img src="~/Assets/Images/DefaultForumIcon.ico" width="48" height="48" /></div>
                <div class="col-md-5">
                    <p class="">@forum.Title</p>
                    <p>@forum.Description</p>
                </div>
                <div class="col-md-2">
                    <p>Threads: 0</p>
                    <p>Posts: 0</p>
                </div>
                <div class="col-md-4">No threads started.</div>
            </div>
            }
        </div>
        }
    </div>