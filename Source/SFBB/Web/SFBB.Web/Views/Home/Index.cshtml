@model IEnumerable<SFBB.Web.ViewModels.Home.IndexCategoriesForumsViewModel>
@{
    ViewBag.Title = "Home Page";
}
<div class="container table-bordered">
    <!-- Start of predefined headers for the forum list -->
    <div class="row" style="background-color: black; border-radius: 5px;">
        <div class="col-md-6">
            Category name
        </div>
        <div class="col-md-2">
            Threads/Posts
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-11">
                    Last Post
                </div>
                <div class="col-md-1">
                    btn
                </div>
            </div>
        </div>
    </div>
    <!-- End of predefined headers for the forum list -->

    <!-- Start of listing all forums for each category -->
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-md-1 table-bordered">
                    <img src="https://forums.unrealengine.com/images/statusicon/epic/news_forum_new-48.png" width="48" height="48" />
                </div>
                <div class="col-md-5">
                    <span>Name of Forum</span>
                    <br />
                    <span>Lorem ipsum long description of a forum</span>
                </div>
                <div class="col-md-2">
                    <span>Threads: 209</span>
                    <br />
                    <span>Posts: 1598</span>
                </div>
                <div class="col-md-4">
                    <span>Some really long post titleee from db</span>
                    <br />
                    <span>by: Admin</span>
                    <br />
                    <span style="font-size: 10px;">01-24-2016, 06:44 PM</span>
                </div>
            </div>
        </div>
    </div>
    <!-- End of listing all forums for each category -->

</div>


