@model IEnumerable<SFBB.Web.ViewModels.Home.IndexCategoriesForumsViewModel>
@{
    ViewBag.Title = "Forums";
    int i = 1;
}
<div class="container">
    @foreach (var category in Model)
    {
        <div class="row table-bordered" style="background-color: rgb(47, 47, 47)">
            <div class="col-md-6">@category.Title</div>
            <div class="col-md-2">Threads/Posts</div>
            <div class="col-md-3">Last post</div>
            <div class="col-md-1 text-right"><button type="button" data-toggle="collapse" data-target="#wrapper@(i)">&darr;</button></div>
        </div>
        <div id="wrapper@(i++)" class="collapse">
            @foreach (var forum in category.Forums)
            {

            <div class="row">
                <div class="col-md-1"><img src="~/Assets/Images/DefaultForumIcon.ico" width="48" height="48" /></div>
                <div class="col-md-5">
                    <p class="lead">@forum.Title</p>
                    <p>@forum.Description</p>
                </div>
                <div class="col-md-2">
                    <p>Threads: 0</p>
                    <p>Posts: 0</p>
                </div>
                <div class="col-md-4">No threads started.</div>
            </div>
            }
        </div>
        }
    </div>