<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, inital-scale=1.0" />
    <title>@ViewBag.Title - Simple Forum BB</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Simple Forum BB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="navbar-collapse collapse color-me">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Forum", "Index", "Home")</li>
                    <li>@Html.ActionLink("Announcements", "Index", "Home")</li>
                    <li>@Html.ActionLink("Unanswered posts", "Index", "Home")</li>
                    <li>@Html.ActionLink("Rules", "Index", "Home")</li>
                    <li>@Html.ActionLink("F.A.Q", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="containter body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>&copy; @DateTime.Now.Year - Simple Forum BB</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>